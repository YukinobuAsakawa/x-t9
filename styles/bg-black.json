{
    "$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/theme.json",
    "version": 2,
    "title": "BG Black",
    "settings": {
        "color": {
            "background": true,
            "text": true,
            "palette": [
                {
                    "slug": "primary",
                    "color": "#233A73",
                    "name": "Primary"
                },
                {
                    "slug": "primary-hover",
                    "color": "#1c45ab",
                    "name": "Primary Hover"
                },
                {
                    "slug": "text-normal",
                    "color": "#fff",
                    "name": "Text Normal "
                },
                {
                    "slug": "text-secondary",
                    "color": "rgba(255,255,255,0.5)",
                    "name": "Text Secondary"
                },
                {
                    "slug": "border-normal",
                    "color": "rgba( 255,255,255,0.1 )",
                    "name": "Border Normal"
                },
                {
                    "slug": "bg-light-gray",
                    "color": "#f9f9f9",
                    "name": "BG Light Gray"
                },
                {
                    "slug": "bg-dark-gray",
                    "color": "#262626",
                    "name": "BG Dark Gray"
                },
                {
                    "slug": "bg-black",
                    "color": "#222222",
                    "name": "BG Black"
                },
                {
                    "slug": "text-normal-darkbg",
                    "color": "rgba( 255,255,255,0.8 )",
                    "name": "Text Normal (Dark BG)"
                },
                {
                    "slug": "text-secondary-darkbg",
                    "color": "rgba( 255,255,255,0.6 )",
                    "name": "Text Secondary (Dark BG)"
                },
                {
                    "slug": "border-normal-darkbg",
                    "color": "rgba( 255,255,255,0.1 )",
                    "name": "Border Normal (Dark BG)"
                },
                {
                    "slug": "text-bright",
                    "color": "rgba(0,0,0,0.51)",
                    "name": "Text Bright (Will be abolished)"
                },
                {
                    "slug": "text-dark-darkbg",
                    "color": "rgba( 255,255,255,0.61 )",
                    "name": "Text Dark (Will be abolished)"
                },
                {
                    "slug": "base",
                    "color": "#222",
                    "name": "Base Color"
                },
                {
                    "slug": "contrast",
                    "color": "#fff",
                    "name": "Contrast Color"
                }
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--base)",
            "text": "var(--wp--preset--color--contrast)"
        },
        "elements": {
            "button": {
                "border": {
                    "radius": "0"
                },
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--contrast)"
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--contrast)",
                        "text": "var(--wp--preset--color--base)"
                    }
                },
                ":focus": {
                    "color": {
                        "background": "var(--wp--preset--color--contrast)",
                        "text": "var(--wp--preset--color--base)"
                    }
                },
                ":active": {
                    "color": {
                        "background": "var(--wp--preset--color--secondary)",
                        "text": "var(--wp--preset--color--base)"
                    }
                }
            }
        }
    }
}