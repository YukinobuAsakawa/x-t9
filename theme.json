{
    "$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/theme.json",
	"version": 2,
    "settings": {
		"appearanceTools": true,
        "layout": {
            "contentSize": "var(--wp--custom--content-size--normal)",
            "wideSize": "calc( var(--wp--custom--content-size--normal) + ( 100vw - var(--wp--custom--content-size--normal) ) / 2 )"
        },
        "color": {
            "background": true,
            "text": true,
            "link": false,
            "custom": true,
            "defaultPalette": true,
            "palette": [
				{
					"slug": "border-light",
					"color": "#e5e5e5",
					"name": "Border Light"
				},
				{
					"slug": "text-normal",
					"color": "#333",
					"name": "Normal Text"
				},
				{
					"slug": "bg-light-gray",
					"color": "#f5f5f5",
					"name": "BG Light Gray"
				}
			],
            "customGradient": true,
            "defaultGradients": true,
            "gradients": [],
            "duotone": [],
            "customDuotone": true
        },
		"spacing": {
			"blockGap": true,
			"margin": true,
            "padding": true,
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "typography": {
			"dropCap": false,
			"fontFamilies": [
                {
                    "slug": "system-font",
                    "name": "System Font",
                    "fontFamily": "\"ヒラギノ角ゴ ProN\", \"Hiragino Kaku Gothic ProN\", \"メイリオ\", Meiryo, \"ＭＳ Ｐゴシック\", \"MS PGothic\", sans-serif"
                }
			],
            "fontSizes": [
				{
                    "name": "Tiny",
                    "slug": "tiny",
                    "size": "10px"
                },
				{
                    "name": "Small",
                    "slug": "small",
                    "size": "14px"
                },
                {
                    "name": "Medium",
                    "slug": "medium",
                    "size": "1rem"
                },
                {
                    "name": "Large",
                    "slug": "large",
                    "size": "1.25rem"
                },
                {
                    "name": "X Large",
                    "slug": "x-large",
                    "size": "1.5rem"
                },
                {
                    "name": "XX Large",
                    "slug": "xx-large",
                    "size": "1.75rem"
                },
                {
                    "name": "XXX Large",
                    "slug": "xxx-large",
                    "size": "2rem"
                },
                {
                    "name": "Huge",
                    "slug": "huge",
                    "size": "clamp(2rem, 4vw, 2.2rem)"
                },
				{
                    "name": "Page Title",
                    "slug": "page-title",
                    "size": "calc(var(--wp--preset--font-size--medium) * 2 )"
                }
			]
        },
        "custom": {
			"content-size":{
				"normal": "min( 1110px, 80% )"
			},
			"spacing":{
				"tiny": "calc(var(--wp--custom--spacing--medium) / 4)",
				"small": "calc(var(--wp--custom--spacing--medium) / 2)",
				"medium": "2rem",
				"large": "calc(var(--wp--custom--spacing--medium) * 1.5)",
				"huge":  "calc(var(--wp--custom--spacing--medium) * 2)"
			}
        }
    },
    "styles": {
        "spacing": {
            "blockGap": "var(--wp--custom--spacing--medium)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--system-font)"
        },
		"color": {
			"text": "var(--wp--preset--color--text-normal)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontWeight": "700",
					"fontSize": "var(--wp--preset--font-size--huge)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xxx-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--text-normal)"
				}
			}
		},
		"blocks": {
            "core/navigation": {

            }
		}
    },
	"customTemplates": [
		{
			"name": "page-lp",
			"title": "Page for LP",
			"postTypes": [
				"page"
			]
		}
	],
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}