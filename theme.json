{
    "$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/theme.json",
	"version": 2,
    "settings": {
		"appearanceTools": true,
        "layout": {
            "contentSize": "var(--wp--custom--content-size--normal)",
            "wideSize": "calc( var(--wp--custom--content-size--normal) + ( 100vw - var(--wp--custom--content-size--normal) ) / 2 )"
        },
        "color": {
            "background": true,
            "text": true,
            "link": false,
            "custom": true,
            "defaultPalette": true,
            "palette": [
				{
					"slug": "border-light",
					"color": "#e5e5e5",
					"name": "Border Light"
				},
				{
					"slug": "text-normal",
					"color": "#333",
					"name": "Normal Text"
				},
				{
					"slug": "bg-light-gray",
					"color": "#f5f5f5",
					"name": "BG Light Gray"
				}
			],
            "customGradient": true,
            "defaultGradients": true,
            "gradients": [],
            "duotone": [],
            "customDuotone": true
        },
		"spacing": {
			"blockGap": true,
			"margin": true,
            "padding": true,
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "typography": {
			"fontFamilies": [
                {
                    "slug": "system-font",
                    "name": "System Font",
                    "fontFamily": "\"ヒラギノ角ゴ ProN\", \"Hiragino Kaku Gothic ProN\", \"メイリオ\", Meiryo, \"ＭＳ Ｐゴシック\", \"MS PGothic\", sans-serif"
                }
			],
            "fontSizes": [
				{
                    "name": "Tiny",
                    "slug": "tiny",
                    "size": "10px"
                },
				{
                    "name": "Small",
                    "slug": "small",
                    "size": "12px"
                },
                {
                    "name": "Normal",
                    "slug": "normal",
                    "size": "1rem"
                },
                {
                    "name": "Large",
                    "slug": "large",
                    "size": "1.25rem"
                },
                {
                    "name": "X Large",
                    "slug": "x-large",
                    "size": "1.5rem"
                },
                {
                    "name": "Huge",
                    "slug": "huge",
                    "size": "2vw"
                }
			]
        },
        "custom": {
			"content-size":{
				"normal": "min( 1200px, 80% )"
			}
        }
    },
    "styles": {
        "spacing": {
            "blockGap": "1.5rem"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--system-font)"
        },
		"color": {
			"text": "var(--wp--preset--color--text-normal)"
		},
		"blocks": {
            "core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)"
				}
            }
		}
    }
}